@page
@model TILApp.Pages.Acronyms.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Acronym</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Acronym.Id" />
            <div class="form-group">
                <label asp-for="Acronym.Short" class="control-label"></label>
                <input asp-for="Acronym.Short" class="form-control" />
                <span asp-validation-for="Acronym.Short" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acronym.Long" class="control-label"></label>
                <input asp-for="Acronym.Long" class="form-control" />
                <span asp-validation-for="Acronym.Long" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acronym.UserId" class="control-label"></label>
                <select asp-for="Acronym.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Acronym.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acronym.Categories">Categories</label>
                <select name="Acronym.Categories[]" class="form-control"
                        id="Acronym.Categories" placeholder="Categories" multiple="multiple">
                    if (editing)
                    {
                     @foreach (var category in Model.Acronym.Categories) {
                        <option value="@category.Name" selected="selected">
                            @category.Name
                        </option>
                    } 
                    }
                   
                </select>
                <span asp-validation-for="Acronym.Categories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Details" asp-route-id="@Model.Acronym.Id">Return</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

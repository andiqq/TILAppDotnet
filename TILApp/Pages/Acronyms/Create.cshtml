@page
@model TILApp.Pages.Acronyms.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Acronym</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Acronym.Short" class="control-label"></label>
                <input asp-for="Acronym.Short" class="form-control" />
                <span asp-validation-for="Acronym.Short" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acronym.Long" class="control-label"></label>
                <input asp-for="Acronym.Long" class="form-control" />
                <span asp-validation-for="Acronym.Long" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acronym.UserId" class="control-label"></label>
                <select asp-for="Acronym.UserId" class ="form-control" asp-items="ViewBag.UserName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Return</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model TILApp.Pages.Acronyms.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Acronym</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Acronym.Short)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Acronym.Short)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Acronym.Long)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Acronym.Long)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Acronym.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Acronym.User.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Acronym.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <a asp-page="Details" asp-route-id="@Model.Acronym.Id">Return</a>
    </div>
</div>

@page "/"
@using Microsoft.EntityFrameworkCore
@inject AcronymContext Context

<PageTitle>Acronyms</PageTitle>

<img src="images/logo.png" class="mx-auto d-block" alt="TIL Logo" />

<h1>Acronyms</h1>

<AcronymsTable acronyms="acronyms"/>

@code {
    
    List<TILApp.Models.Acronym> acronyms = [];

    protected override async Task OnInitializedAsync()
    {
        acronyms = await Context.Acronym.Include(a => a.User).ToListAsync();
    }

}